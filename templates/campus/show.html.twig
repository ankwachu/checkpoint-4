{% extends 'layout.html.twig' %}

{% block title %}Campus{% endblock %}

{% block body %}
    <h1>Campus</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ campus.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ campus.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ campus.description }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>
                    <img src="{{ vich_uploader_asset(campus, 'imageFile') }}"
                         alt="{{ campus.name }} poster">
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('campus_index') }}">back to list</a>

    <a href="{{ path('campus_edit', {'id': campus.id}) }}">edit</a>

    {{ include('campus/_delete_form.html.twig') }}
{% endblock %}
