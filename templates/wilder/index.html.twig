{% extends 'layout.html.twig' %}
{% set page = 'wilder' %}

{% block title %}Hello WilderController!{% endblock %}

{% block body %}
    <h1 class="text-center">Les Wilders</h1>
    <div class="row">
        {% for user in users %}
            <div class="col-3">
                <div class="card" style="width: 18rem;">
                    <img src="https://images.unsplash.com/photo-1517462964-21fdcec3f25b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60"
                         class="card-img-top" alt="...">
                    <div class="card-body position-absolute">
                        <h5 class="card-title ">{{ user.firstname|capitalize }}</h5>
                        <h5 class="card-title">{{ user.lastname|capitalize }}</h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of
                            the card's content.</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
