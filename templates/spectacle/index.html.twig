{% extends 'layout.html.twig' %}

{% block title %}Hello SpectacleController!{% endblock %}

{% block body %}
    <h1 class="text-center">Découvrez nos spectacles</h1>
    <div class="row">
        <div class="col-12">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button>Rechercher</button>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="row">
        {% for event in events %}
            <div class="card col-5">
                <img src="https://images.unsplash.com/photo-1503192851959-c6da8ac80cff?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80"
                     class="card-img-top img-fluid" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ event.title }}</h5>
                    <a href="{{ path('event_detail', {'id': event.id}) }}">voir détail spectacle</a>
                    <a href="{{ path('campus_detail', {'id': event.campus.id}) }}">{{ event.campus.name }}</a>
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to
                        additional content. This content is a little bit longer.</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
                <button type="button" class="btn btn-primary btn-lg btn-block">Réservez un spectacle</button>
            </div>
        {% endfor %}
    </div>
{% endblock %}
